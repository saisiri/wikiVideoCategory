{% extends 'base.html.twig' %}

{% block title %}List of all channel patterns {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Channel patterns list </h1>
    <table>
        <thead>
        <tr>
            <th>
                Pattern ID
            </th>
            <th>
                Needle
            </th>
            <th>
                Pattern
            </th>
            <th>
                Channel ID
            </th>
        </tr>
        </thead>
        <tbody>
        {% for channel_pattern in channel_patterns %}
            <tr>
                <th>
                    {{ channel_pattern.id }}
                </th>
                <th>
                    {{ channel_pattern.needle }}
                </th>
                <th>
                    {{ channel_pattern.pattern }}
                </th>
                <th>
                    {{ channel_pattern.channelid }}
                </th>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
